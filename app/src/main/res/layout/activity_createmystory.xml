<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".createmystory">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/storyBottomBar"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/storypic">

    </ImageView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/topstory">

    </ImageView>


    <ImageView

        android:id="@+id/uploadstory"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/next"
       android:layout_centerHorizontal="true">

    </ImageView>
    <LinearLayout

        android:layout_toLeftOf="@+id/uploadstory"
        android:id="@+id/storyBottomBar"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:weightSum="2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:src="@drawable/yourstories">

        </ImageView>
        <ImageView
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:src="@drawable/closefriends">

        </ImageView>

    </LinearLayout>

</RelativeLayout>