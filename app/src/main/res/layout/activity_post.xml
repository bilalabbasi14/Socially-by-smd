<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".post">
    <RelativeLayout
        android:id="@+id/posttopbar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:padding="12dp">
        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="20dp"
            android:textColor="#9A4955"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

        </TextView>
        <TextView
            android:id="@+id/recents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Recents"
            android:textColor="#9A4955"
            android:layout_centerInParent="true">
        </TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/down"
            android:layout_toRightOf="@+id/recents"
            android:layout_centerVertical="true">
        </ImageView>
        <TextView
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textSize="20dp"
            android:textColor="#9A4955"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

        </TextView>

    </RelativeLayout>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@+id/posttopbar"
       android:layout_above="@+id/postbtmbar"
       android:orientation="vertical"
       android:weightSum="2">


      <RelativeLayout
          android:id="@+id/postpic"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1.2">

          <ImageView
              android:id="@+id/previewImage"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:scaleType="fitXY"
              android:src="@drawable/pic7">

          </ImageView>

          <LinearLayout
              android:id="@+id/overlaybuttons"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"

              android:gravity="center"
              android:layout_alignBottom="@id/previewImage"
              android:layout_alignParentEnd="true"
              android:layout_marginEnd="10dp"
              android:layout_marginBottom="10dp">
              <ImageView
                  android:layout_marginEnd="5dp"
                  android:layout_width="45dp"
                  android:layout_height="45dp"
                  android:src="@drawable/infinity"
                  android:background="@drawable/circle"
                  android:backgroundTint="#66000000"
                  android:paddingLeft="5dp"
                  android:paddingRight="5dp">
              </ImageView>
              <ImageView
                  android:layout_marginEnd="5dp"
                  android:layout_width="45dp"
                  android:layout_height="45dp"
                  android:src="@drawable/collage"
                  android:background="@drawable/circle"
                  android:backgroundTint="#66000000"
                  android:paddingTop="6dp"
                  android:paddingBottom="6dp"
                  android:paddingLeft="5dp"
                  android:paddingRight="5dp">
              </ImageView>
              <androidx.cardview.widget.CardView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  app:cardBackgroundColor="#66000000"
                  app:cardCornerRadius="18dp">
                  <LinearLayout
                      android:orientation="horizontal"
                      android:gravity="center"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:padding="8dp">

                      <ImageView
                          android:src="@drawable/stackedsquare"
                          android:layout_width="30dp"
                          android:layout_height="30dp"
                          android:layout_marginEnd="5dp">

                      </ImageView>

                      <TextView
                          android:text="  SELECT MULTIPLE"
                          android:textSize="20dp"
                          android:textColor="@color/white"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content">

                      </TextView>
                  </LinearLayout>
              </androidx.cardview.widget.CardView>


          </LinearLayout>
      </RelativeLayout>
       <ScrollView
           android:id="@+id/postscroll"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="0.8">
           <GridLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:columnCount="4"
               android:orientation="horizontal">
               <ImageView
                   android:layout_width="0dp"
                   android:layout_height="120dp"
                   android:layout_columnWeight="1"
                   android:scaleType="fitXY"
                   android:src="@drawable/pic7"
                   android:foreground="#80CCCCCC">
               </ImageView>
               <ImageView
                   android:layout_width="0dp"
                   android:layout_height="120dp"
                   android:layout_columnWeight="1"
                   android:scaleType="fitXY"
                   android:src="@drawable/pic2">
               </ImageView>
               <ImageView
                   android:layout_width="0dp"
                   android:layout_height="120dp"
                   android:layout_columnWeight="1"
                   android:scaleType="fitXY"
                   android:src="@drawable/pic3">
               </ImageView>
               <ImageView
                   android:layout_width="0dp"
                   android:layout_height="120dp"
                   android:layout_columnWeight="1"
                   android:scaleType="fitXY"
                   android:src="@drawable/pic4">
               </ImageView>
               <ImageView
                   android:layout_width="0dp"
                   android:layout_height="120dp"
                   android:layout_columnWeight="1"
                   android:scaleType="fitXY"
                   android:src="@drawable/explorepic6">

               </ImageView>
               <ImageView
                   android:layout_width="0dp"
                   android:layout_height="120dp"
                   android:layout_columnWeight="1"
                   android:scaleType="fitXY"
                   android:src="@drawable/pic5">
               </ImageView>
               <ImageView
                   android:layout_width="0dp"
                   android:layout_height="120dp"
                   android:layout_columnWeight="1"
                   android:scaleType="fitXY"
                   android:src="@drawable/pic6">
               </ImageView>
               <ImageView
                   android:layout_width="0dp"
                   android:layout_height="120dp"
                   android:layout_columnWeight="1"
                   android:scaleType="fitXY"
                   android:src="@drawable/explorepic7">

               </ImageView>
               <ImageView
                   android:layout_width="0dp"
                   android:layout_height="120dp"
                   android:layout_columnWeight="1"
                   android:scaleType="fitXY"
                   android:src="@drawable/explorepic8">

               </ImageView>
               <ImageView
                   android:layout_width="0dp"
                   android:layout_height="120dp"
                   android:layout_columnWeight="1"
                   android:scaleType="fitXY"
                   android:src="@drawable/explorepic9">

               </ImageView>
               <ImageView
                   android:layout_width="0dp"
                   android:layout_height="120dp"
                   android:layout_columnWeight="1"
                   android:scaleType="fitXY"
                   android:src="@drawable/explorepic5">

               </ImageView>
               <ImageView
                   android:layout_width="0dp"
                   android:layout_height="120dp"
                   android:layout_columnWeight="1"
                   android:scaleType="fitXY"
                   android:src="@drawable/explorepic4">

               </ImageView>



           </GridLayout>
       </ScrollView>



   </LinearLayout>

    <LinearLayout
        android:id="@+id/postbtmbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="3"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
           android:text="Library"
            android:textSize="18dp"
            android:textColor="#A3444D"
            android:textStyle="bold"
            android:gravity="center">

        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Photo"
            android:textSize="18dp"
            android:textColor="#96595C"
            android:textStyle="bold"
            android:gravity="center">

        </TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Video"
            android:textSize="18dp"
            android:textColor="#96595C"
            android:textStyle="bold"
            android:gravity="center">

        </TextView>
    </LinearLayout>

</RelativeLayout>