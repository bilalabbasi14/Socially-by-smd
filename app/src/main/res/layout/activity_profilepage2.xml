<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profilepage">

    <RelativeLayout
        android:id="@+id/proftopbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="8dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back2"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

        </ImageView>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/threedots"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

        </ImageView>
        <TextView
            android:id="@+id/profid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="niko"
            android:layout_centerInParent="true"
            android:textSize="24dp"
            android:textStyle="bold"
            >

        </TextView>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_toRightOf="@+id/profid"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/tick"
            android:layout_centerVertical="true">

        </ImageView>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/profbtmnav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="5"
        android:padding="10dp">

        <ImageView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/homepage"
            android:scaleType="centerInside"
            android:padding="8dp">

        </ImageView>
        <ImageView
            android:id="@+id/explore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/explore">

        </ImageView>
        <ImageView
            android:id="@+id/post"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/post"
            >

        </ImageView>
        <ImageView
            android:id="@+id/notification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/notification"
            >

        </ImageView>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/prof"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/dp"
            app:civ_border_width="2.5dp"
            app:civ_border_color="#9B5A5A">
        </de.hdodenhof.circleimageview.CircleImageView>
    </LinearLayout>

    <ScrollView
        android:layout_below="@+id/proftopbar"
        android:layout_above="@+id/profbtmnav"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImage"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/story"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/niko">

                </de.hdodenhof.circleimageview.CircleImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:layout_marginStart="20dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:text="117"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                        <TextView
                            android:text="Posts"
                            android:textSize="14dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:text="3M"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:text="Followers"
                            android:textSize="14dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:text="162"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                        <TextView
                            android:text="Following"
                            android:textSize="14dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Niko Omilana"

                android:textStyle="bold"
                android:textSize="16dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="#F0F4F7"
                app:cardCornerRadius="18dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp">

                    <ImageView
                        android:src="@drawable/threads"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginEnd="5dp">

                    </ImageView>

                    <TextView
                        android:text="niko"
                        android:textSize="14dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Reel creator"
                android:textColor="#8E8D95">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supreme Leader of the NDL">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" @shadesbyniko"
                android:textColor="#4B708D">
            </TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/link">
                </ImageView>
                <TextView
                    android:layout_marginStart="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="www.shopndl.com"
                    android:textStyle="bold">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/avatars">

                </ImageView>
                <TextView
                    android:layout_marginStart="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Followed by">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="aliawan,bilal14 "
                    android:layout_marginStart="2dp"

                    android:textStyle="bold">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="and">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="12 others"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/adduser"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/adduser"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true">

                </ImageView>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/adduser"
                    android:weightSum="3"
                    android:padding="8dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="#F0F4F7">
                        <TextView
                            android:text="Following"
                            android:gravity="center"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#F0F4F7"
                        app:cardCornerRadius="10dp">

                        <TextView
                            android:text="Message"
                            android:gravity="center"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/card_border"
                            android:padding="8dp"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#F0F4F7"
                        app:cardCornerRadius="10dp">

                        <TextView
                            android:text="Email"
                            android:gravity="center"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/card_border"
                            android:padding="8dp"/>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </RelativeLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/highlight1"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:background="@drawable/greyoval"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:src="@drawable/bird">
                        </de.hdodenhof.circleimageview.CircleImageView>

                        <TextView
                            android:text="Highlight1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/highlight2"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:background="@drawable/greyoval"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:src="@drawable/pic7">
                        </de.hdodenhof.circleimageview.CircleImageView>

                        <TextView
                            android:text="Highlight2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/highlight3"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:background="@drawable/greyoval"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:src="@drawable/pic4">
                        </de.hdodenhof.circleimageview.CircleImageView>

                        <TextView
                            android:text="Highlight3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:src="@color/white"
                                app:civ_border_width="1dp"
                                app:civ_border_color="@color/black">

                            </de.hdodenhof.circleimageview.CircleImageView>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/plus">
                            </ImageView>
                        </RelativeLayout>

                        <TextView
                            android:text="New"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                        </TextView>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:weightSum="2">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/bgrid">

                </ImageView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/tag">

                </ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <View
                    android:layout_width="0dp"
                    android:layout_height="1.5dp"
                    android:background="@color/black"
                    android:layout_weight="1">
                </View>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1.5dp"
                    android:background="#E3E3E3"
                    android:layout_weight="1"
                    >
                </View>
            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/pic1">
                </ImageView>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/pic2">
                </ImageView>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/pic3">
                </ImageView>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/pic4">
                </ImageView>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/pic9">

                </ImageView>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/pic5">
                </ImageView>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/pic6">
                </ImageView>



            </GridLayout>



        </LinearLayout>
    </ScrollView>


</RelativeLayout>