<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".opendm">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:padding="8dp">
            <ImageView
                android:id="@+id/opendmback"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/coloredback2"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">

            </ImageView>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/dmprofpic"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/chunkz"
                android:layout_toRightOf="@+id/opendmback"
                android:layout_marginLeft="10dp">
            </de.hdodenhof.circleimageview.CircleImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="chunkz"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/dmprofpic"
                android:layout_centerVertical="true">

            </TextView>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/videocall"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/videocall">

                </ImageView>
                <ImageView
                    android:id="@+id/i"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/i">

                </ImageView>

            </LinearLayout>
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bottommessage"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:padding="12dp">

        <EditText
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_centerInParent="true"
            android:background="@drawable/buttonrect"
            android:backgroundTint="#EFEFEF"
            android:paddingLeft="30dp"
            android:hint="Message..."
            android:textColorHint="#848484">

        </EditText>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/circle"
            android:backgroundTint="#9A5A5B"
            android:src="@drawable/whitecamera"
            android:paddingTop="4dp"
            android:paddingBottom="5dp"
            android:layout_centerVertical="true">

        </ImageView>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/microphone">

            </ImageView>
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/gallery">

            </ImageView>
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/stickers">

            </ImageView>

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/dmtext"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_above="@+id/bottommessage"
        android:layout_marginEnd="12dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="Hey man!"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textStyle="bold"
            android:paddingTop="13dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/messagebg">
        </TextView>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4:33  PM"
        android:layout_above="@+id/dmtext"
        android:layout_centerHorizontal="true">

    </TextView>



</RelativeLayout>