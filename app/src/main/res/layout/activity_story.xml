<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".story">
    <RelativeLayout
        android:id="@+id/bottommessage"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:padding="12dp">
        <ImageView
            android:id="@+id/threedot"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/threedotscol">

        </ImageView>
        <ImageView
            android:id="@+id/sendmsg"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/dm"
            android:layout_toLeftOf="@id/threedot">

        </ImageView>

        <EditText
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_toLeftOf="@id/sendmsg"
            android:layout_marginEnd="10dp"
            android:layout_centerInParent="true"
            android:background="@drawable/sendmsgbg"
            android:paddingLeft="33dp"
            android:hint=" Send Message"
            android:textColorHint="#8D5D62">

        </EditText>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/circle"
            android:backgroundTint="#4C4C4C"
            android:src="@drawable/camerafilled"
            android:paddingTop="4dp"
            android:paddingBottom="5dp"
            android:layout_marginStart="8dp"
            android:layout_centerVertical="true">

        </ImageView>


    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottommessage"
        android:scaleType="centerCrop"
        android:src="@drawable/mafia">

    </ImageView>
    <LinearLayout
        android:id="@+id/storybar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal"
        android:weightSum="4">
        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/white"
            android:layout_weight="1"
            android:layout_marginEnd="4dp">
        </View>
        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/white"
            android:layout_weight="1"
            android:layout_marginEnd="4dp">
        </View>
        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="#B7B7B7"
            android:layout_weight="1"
            android:layout_marginEnd="4dp">
        </View>
        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="#B7B7B7"
            android:layout_weight="1"
            android:layout_marginEnd="4dp">
        </View>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@+id/storybar"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/betasquad"
            >

        </de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="betasquad"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4h"
            android:textColor="#B7B7B7"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp">

        </TextView>
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/cross"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:src="@drawable/cross"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true">

            </ImageView>
        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>