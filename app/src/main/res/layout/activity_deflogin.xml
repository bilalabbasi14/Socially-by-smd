<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".deflogin">



    <TextView
        android:id="@+id/Socially"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Socially"
        android:textSize="36dp"
        android:layout_marginTop="135dp"
        android:layout_centerHorizontal="true"
        android:textColor="#943C42">

    </TextView>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dp"
        android:layout_width="140dp"
        android:layout_height="125dp"
        android:layout_below="@+id/Socially"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/dp" />
<TextView
    android:id="@+id/name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="abba._.si"
    android:textStyle="bold"
    android:layout_below="@+id/dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="15dp">
</TextView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Login"
        android:layout_width="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonrect"
        android:backgroundTint="#9A5A5B"
        android:layout_below="@+id/name"
        android:text="Log in"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginTop="10dp">

    </androidx.appcompat.widget.AppCompatButton>
    <TextView
        android:id="@+id/switchacc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Login"
        android:text="Switch accounts"
        android:layout_centerHorizontal="true"
        android:textColor="#9B6462"
        android:textStyle="bold"
        android:layout_marginTop="25dp">

    </TextView>

    <TextView
        android:id="@+id/q"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:layout_centerHorizontal="true"
        android:text="Don't have an account?"

        android:textColor="#8F666C">

    </TextView>

    <TextView
        android:id="@+id/Signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Sign Up."
        android:layout_marginBottom="36dp"
        android:layout_toRightOf="@+id/q"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:textColor="#9D424C">

    </TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#E3E3E3"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_centerHorizontal="true">
    </View>




</RelativeLayout>